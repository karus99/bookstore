extends layout

block content
    .container
        .panel.panel-default
            .panel-heading
                | Panel obsługi administratora
            .panel-body
                .col-md-3
                    ul.list-group
                        li.list-group-item Pracownicy
                        li.list-group-item
                            a(href='/admin/add-worker') Dodaj pracownika
                        li.list-group-item
                            a(href='/admin/del-worker') Usuń pracownika
                .col-md-9         
                    table.table.table-striped.table-hover
                        thead
                            tr
                                th Użytkownik
                                th.text-right(style="padding-right: 10px;") Akcja
                        tbody#users_table(data-type="users")
                    
block scripts
    script(src='/javascripts/admin.js')