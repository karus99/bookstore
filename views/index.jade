	#login_modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='modal-login-label', aria-hidden='true')
		.modal-dialog
			.modal-content
				.modal-header
					button.close(type='button', data-dismiss='modal')
						span(aria-hidden='true') ×
						span.sr-only Zamknij
					h3#modal-login-label.modal-title Zaloguj się do biblioteki online.
					p Wpisz swoją nazwę użytkownika i hasło w celu zalogowania się:
				#login_box.modal-body
					#login_fail(style='display: none')
						.col-xs-4.text-right
							i.fa.fa-times-circle.text-danger(style='font-size: 40px;margin-bottom: 20px;')
						.col-xs-8
							span.h3.text-danger(style='margin-top: 7px; display: inline-block;') Niepoprawne dane
					#login_form
						.form-group
							label.sr-only(for='form-username') Nazwa użytkownika
							input#login_login.form-username.form-control(type='text', name='lo_login_email', placeholder='Nazwa użytkownika...')
						.form-group
							label.sr-only(for='form-password') Hasło
							input#login_pass.form-password.form-control(type='password', name='lo_login_password', placeholder='Hasło...')
						.form-group.col-md-6
							label
								input(type='checkbox', value='')
								|  Zapamiętaj mnie
						.form-group.col-md-6
							label.btn-forgot
								a.btn.btn-primary.btn-sm.btn-forgot(href='#') Zapomniałem hasła
						button#lo_login.btn Zaloguj się!
					#login_success.text-center(style='display: none')
						i.fa.fa-check-circle.text-success(style='font-size: 120px;')
						br
						span.h3.text-success Pomyślnie zalogowano!
